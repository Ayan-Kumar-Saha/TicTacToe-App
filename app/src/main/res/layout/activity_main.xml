<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/primaryColor">

    <TextView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tic Tac Toe"
        android:layout_centerHorizontal="true"
        android:textColor="@color/primaryTextColor"
        android:layout_marginTop="80sp"
        android:textSize="60sp" />

    <TextView
        android:id="@+id/tv_one"
        android:layout_below="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Player 1 Name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50sp"
        android:textColor="@color/secondaryTextColor"
        android:textSize="22sp" />

    <EditText
        android:id="@+id/player_one_name"
        android:layout_below="@+id/tv_one"
        android:textColor="@color/primaryTextColor"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10sp"
        android:layout_width="200sp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/primaryTextColor"
        android:gravity="center"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/player_one_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20sp"
        android:text="Enter Player 2 Name"
        android:textColor="@color/secondaryTextColor"
        android:textSize="22sp" />

    <EditText
        android:id="@+id/player_two_name"
        android:layout_width="200sp"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_two"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="10sp"
        android:backgroundTint="@color/primaryTextColor"
        android:textSize="20sp"
        android:textColor="@color/primaryTextColor"/>

    <Button
        android:id="@+id/bt_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/player_two_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20sp"
        android:padding="15sp"
        android:text="Start Game"
        android:textSize="20sp"
        android:onClick="openGameActivity"/>

</RelativeLayout>